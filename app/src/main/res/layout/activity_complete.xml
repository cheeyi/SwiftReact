<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_gradient"
    android:baselineAligned="false"
    android:id="@+id/relativeLayout"
    android:keepScreenOn="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="257dp"
        android:layout_height="404dp"
        android:id="@+id/reactionTime"
        android:layout_gravity="center"
        android:src="@drawable/countdown" />

    <TextView
        android:id="@+id/textView1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/complete"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:textColor="#eafde6"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top" />

    <Button
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:onClick="startDefaultActivity"
        android:text="@string/exit"
        android:background="#eafde6"
        android:textColor="#ff1b676b" />

    <Button
        android:id="@+id/button1"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="startCountdownActivity"
        android:text="@string/repeat"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp"
        android:background="#eafde6"
        android:textColor="#ff1b676b" />

    <TextView
        android:id="@+id/textView3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/reaction_time"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#eafde6"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerHorizontal="true"
        android:textColor="#eafde6"
        android:contentDescription="Placeholder for reaction time."
        android:text="12.06"
        android:layout_gravity="center"
        android:textSize="60sp" />

</FrameLayout>